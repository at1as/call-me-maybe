<div class="center">

  <h1>Availability</h1>
  
  <%= flash_messages %>

  <p class="calendar-description">
    <i>Let's catch up!</i><br/>
    Book an available slot below and you'll be sent a link during the requested time-slot to chat
  </p>
  
  <div class="col-md-8 col-md-offset-2">

    <div class="row">
      <h5>Your Time Zone</h5>
    </div>

    <div class="row">
      <div class="col-md-6 col-sm- col-md-offset- col-md-offset-3">
        <div class="row">
          <%= time_zone_select "set-timezone", nil, ActiveSupport::TimeZone.us_zones, default: "Pacific Time (US & Canada)"  %>
        </div>
      </div>
    </div>

    <div class="row">
      <%= render partial: "calendar", locals: {conversations: @conversations} %>
    </div>

  </div>

</div>
